{
  "family": "flask-xray-taskdef",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "",
  "taskRoleArn": "",
  "containerDefinitions": [
    {
      "name": "flask-app",
      "image": "",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "MY_APP_CONFIG",
          "valueFrom": ""
        },
        {
          "name": "MY_DB_PASSWORD",
          "valueFrom": ""
        },
        {
          "name": "SERVICE_NAME",
          "value": "flask-xray-service"
        }
      ],
      "essential": true
    },
    {
      "name": "xray-sidecar",
      "image": "amazon/aws-xray-daemon",
      "portMappings": [
        {
          "containerPort": 2000,
          "protocol": "udp"
        }
      ],
      "essential": false
    }
  ]
}
